<!DOCTYPE html>
<html>
<head>
	<title>susito5</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<meta charset="utf-8">
	<style type="text/css">
		#videocontenedor {
			position:absolute;
			top: 0;
			left: 0;
			height:100%;
			width:100%;
			overflow: hidden;
			display: none;
		}
		#cerrar {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 40px;
			display: none;
			z-index: 99;
		}
	</style>
</head>
<body>

	<ul>
		<% for(var i=0; i<archivos.length; i++) {%>
			<li><a href="#" class="ar" data-ar="archivos/<%= archivos[i] %>"><%= archivos[i] %></a></li>
		<% } %>
	</ul>
	
	<div id="cerrar">
	</div>	

	<div id="videocontenedor">
	</div>

	<script src="js/jquery-2.1.4.min.js"></script>
	<script>
	$(function() {
		$('.ar').on('click', function(e) {
			e.preventDefault();
			var fuente = $(this).data('ar');
			$('#cerrar').show();
			$('#videocontenedor').html('<video id="elvideo" width="100%" height="100%" controls><source src="'+ fuente +'"></video>');
			$('#videocontenedor').fadeIn();
		});
		$('#cerrar').on('click', function(e) {
			e.preventDefault();
			var elvideo = $('#elvideo')[0];
			elvideo.pause();
			elvideo.src = '';
			elvideo.load();
			$('#elvideo').remove();
			$('#videocontenedor').hide();
			$(this).hide();
		});
	});
	</script>

</body>
</html>
